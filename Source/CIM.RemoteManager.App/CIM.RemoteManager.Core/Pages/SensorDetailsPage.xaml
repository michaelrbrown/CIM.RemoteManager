                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Sensor Image, Name, and Serial Number -->
                <Grid Grid.Row="0"
                      Margin="0"
                      BackgroundColor="{StaticResource HeaderBackgroundColor}"
                      HeightRequest="50" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
