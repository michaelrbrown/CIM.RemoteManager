<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:templates="clr-namespace:CIM.RemoteManager.Core.Templates;assembly=CIM.RemoteManager.Core"
             x:Class="CIM.RemoteManager.Core.Pages.SensorListPage" 
             Title="Sensors">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" BackgroundColor="Transparent">
            <!-- Margin: left, top, right, bottom -->
            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="#E7F4FC">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Vertical" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Spacing="0">
                    <Label Text="{Binding UpdateButtonText, Mode=TwoWay}" TextColor="{DynamicResource AppAccentColor}" HorizontalOptions="Center" VerticalOptions="Center" />
                    <Switch IsToggled="{Binding UpdatesStarted, Mode=TwoWay}" Toggled="SensorUpdatesSwitchToggled" Margin="5" HorizontalOptions="Center" VerticalOptions="Center" />
                </StackLayout>

                <Frame Grid.Row="0" Grid.Column="1" Style="{DynamicResource ValueBoxStyle}" Opacity=".7" 
                       HeightRequest="120" WidthRequest="120" CornerRadius="60" Margin="5"
                       HasShadow="False" OutlineColor="{DynamicResource OutlineColor}" 
                       VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                    <Image Source="DA12.png" Aspect="AspectFit" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
                </Frame>

                <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HeightRequest="20" BackgroundColor="{DynamicResource FooterBackgroundColor}">
                    <Label Text="{Binding CharacteristicValue, StringFormat='Incoming Value: {0}'}" TextColor="{DynamicResource FooterBackgroundColor}" Margin="10" VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand"></Label>
                </StackLayout>

                <StackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand" HeightRequest="40" BackgroundColor="{DynamicResource RemoteNameBackgroundColor}">
                    <Label Text="{Binding DeviceName}" TextColor="{DynamicResource AppLightColor}" FontSize="20" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" />
                </StackLayout>
       
            </Grid>
        </StackLayout>

        <ListView Grid.Row="1" 
                    ItemsSource="{Binding Sensors}" 
                    SeparatorVisibility="Default" 
                    BackgroundColor="Transparent"
                    SeparatorColor="Transparent" 
                    HasUnevenRows="false"
                    RowHeight="116" 
                    ItemTapped="ListView_OnItemTapped" 
                    ItemSelected="ListView_OnItemSelected" 
                    IsPullToRefreshEnabled="False">

                <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <!-- Context Actions -->
                        <ViewCell.ContextActions>
                            <MenuItem Clicked="ListView_OnStats" CommandParameter="{Binding .}"
                                              Text="Stats" />
                            <MenuItem Clicked="ListView_OnSettings" CommandParameter="{Binding .}"
                                              Text="Limits" IsDestructive="True" />
                        </ViewCell.ContextActions>

                        <!-- Sensor Detail Template -->
                        <templates:SensorItemTemplate  />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

    </Grid>

</ContentPage>