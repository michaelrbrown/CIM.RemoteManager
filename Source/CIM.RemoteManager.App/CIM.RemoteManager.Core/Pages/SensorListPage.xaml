<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:templates="clr-namespace:CIM.RemoteManager.Core.Templates;assembly=CIM.RemoteManager.Core"
             x:Class="CIM.RemoteManager.Core.Pages.SensorListPage" 
             Title="DA-12 Sensors">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" Orientation="Vertical" HeightRequest="150">
            <Label Text="{Binding CharacteristicValue, StringFormat='Value: {0}'}" Margin="10" VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand"></Label>
            <Button Text="{Binding UpdateButtonText}" Command="{Binding ToggleUpdatesCommand}" HorizontalOptions="Center"></Button>
        </StackLayout>

        <StackLayout Grid.Row="1" Orientation="Horizontal" Padding="10,5,5,10" BackgroundColor="#00A9A5">
            <Label Text="{Binding Device.Name}" TextColor="#ffffff" FontSize="20" />
        </StackLayout>

        <ListView Grid.Row="2" 
                    ItemsSource="{Binding Sensors}" 
                    SeparatorVisibility="Default" 
                    BackgroundColor="Transparent"
                    SeparatorColor="Transparent" 
                    HasUnevenRows="false"
                    RowHeight="116" 
                    ItemTapped="ListView_OnItemTapped" 
                    ItemSelected="ListView_OnItemSelected" 
                    IsPullToRefreshEnabled="True">

                <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>

                        <!-- Context Actions -->
                        <ViewCell.ContextActions>
                            <MenuItem Clicked="ListView_OnStats" CommandParameter="{Binding .}"
                                              Text="Stats" />
                            <MenuItem Clicked="ListView_OnSettings" CommandParameter="{Binding .}"
                                              Text="Limits" IsDestructive="True" />
                        </ViewCell.ContextActions>

                        <!-- Sensor Detail Template -->
                        <templates:SensorItemTemplate  />

                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

    </Grid>

</ContentPage>