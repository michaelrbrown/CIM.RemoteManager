<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:templates="clr-namespace:CIM.RemoteManager.Core.Templates;assembly=CIM.RemoteManager.Core"
             x:Class="CIM.RemoteManager.Core.Pages.SensorListPage" 
             Title="DA-12 Sensors">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="225"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" BackgroundColor="Transparent">
            <!-- Fast Swap Progress Indicators -->
            <!-- Margin: left, top, right, bottom -->
            <Grid HorizontalOptions="Center" Margin="20" BackgroundColor="#E7F4FC">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Row="0" Grid.Column="0" Source="DA12.png" Aspect="AspectFill" WidthRequest="200" HeightRequest="200" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />

                <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="0">
                    <Switch IsToggled="{Binding UpdatesStarted, Mode=TwoWay}" Toggled="SensorUpdatesSwitchToggled" Margin="5,0,5,0" HorizontalOptions="Center" VerticalOptions="Center" />
                    <Label Text="{Binding UpdateButtonText}" HorizontalOptions="Center" />
                </StackLayout>

                <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HeightRequest="40" BackgroundColor="{DynamicResource AppAccentColor}">
                    <Label Text="{Binding DeviceName}" TextColor="{DynamicResource NameColor}" FontSize="20" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" />
                </StackLayout>
       
            </Grid>
        </StackLayout>

        <ListView Grid.Row="1" 
                    ItemsSource="{Binding Sensors}" 
                    SeparatorVisibility="Default" 
                    BackgroundColor="Transparent"
                    SeparatorColor="Transparent" 
                    HasUnevenRows="false"
                    RowHeight="116" 
                    ItemTapped="ListView_OnItemTapped" 
                    ItemSelected="ListView_OnItemSelected" 
                    IsPullToRefreshEnabled="False">

                <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>

                        <!-- Context Actions -->
                        <ViewCell.ContextActions>
                            <MenuItem Clicked="ListView_OnStats" CommandParameter="{Binding .}"
                                              Text="Stats" />
                            <MenuItem Clicked="ListView_OnSettings" CommandParameter="{Binding .}"
                                              Text="Limits" IsDestructive="True" />
                        </ViewCell.ContextActions>

                        <!-- Sensor Detail Template -->
                        <templates:SensorItemTemplate  />

                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

    </Grid>

</ContentPage>